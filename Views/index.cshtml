@{
    Layout="Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row jumbotron">
        <h1>Rock Paper Scissors</h1>
    </div>

    <div class="row">
        <form class="" action="/play" method="post">
            <div class="form-group" id="playerOne">
                <label for="select-time">Select a weapon</label>
                <select class="form-control" name="playerOneInput">
                    <option></option>
                    <option value="rock">Rock</option>
                    <option value="paper">Paper</option>
                    <option value="scissors">Scissors</option>
                </select>
            </div>
            <div class="form-group" id="playerTwo">
                <label for="select-time">Select a weapon</label>
                <select class="form-control" name="playerTwoInput">
                    <option></option>
                    <option value="rock">Rock</option>
                    <option value="paper">Paper</option>
                    <option value="scissors">Scissors</option>
                </select>
            </div>
            <button class="btn" type="submit" name="button">Submit</button>
        </form>
    </div>



    <div class="row result">
        <div class="col-xs-4 image">
            <h3>Player 1</h3>
            @if(@Model != null)
            {
                @if(@Model["playerOne"] == "paper")
                {
                    <img src="/Content/img/paper.jpg" alt="paper">
                }
                @if(@Model["playerOne"] == "rock")
                {
                    <img src="/Content/img/rock.jpg" alt="rock">
                }
                @if(@Model["playerOne"] == "scissors")
                {
                    <img src="/Content/img/scissors.jpg" alt="scissors">
                }
            }
        </div>

        <div class="col-xs-4">
            @if (@Model != null)
            {
                <p>@Model["winner"]</p>
            }
        </div>

        <div class="col-xs-4 image">
            <h3>Player 2</h3>
            @if(@Model != null)
            {
                @if(@Model["playerTwo"] == "paper")
                {
                    <img src="/Content/img/paper.jpg" alt="paper">
                }
                @if(@Model["playerTwo"] == "rock")
                {
                    <img src="/Content/img/rock.jpg" alt="rock">
                }
                @if(@Model["playerTwo"] == "scissors")
                {
                    <img src="/Content/img/scissors.jpg" alt="scissors">
                }
            }
        </div>
    </div>

</div>
