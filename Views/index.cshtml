@{
    Layout="Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row jumbotron">
        <h1>Rock Paper Scissors</h1>
    </div>

    <div class="row">
        <form class="" action="/play" method="post">
            <div class="form-group" id="playerOne">
                <label for="select-time">Select a time</label>
                <select class="form-control" name="playerOneInput">
                    <option></option>
                    <option value="rock">Rock</option>
                    <option value="paper">Paper</option>
                    <option value="scissors">Scissors</option>
                </select>
            </div>
            <div class="form-group" id="playerTwo">
                <label for="select-time">Select a time</label>
                <select class="form-control" name="playerTwoInput">
                    <option></option>
                    <option value="rock">Rock</option>
                    <option value="paper">Paper</option>
                    <option value="scissors">Scissors</option>
                </select>
            </div>
            <button class="btn" type="submit" name="button">Submit</button>
        </form>
    </div>



    <div class="row">
        @if (@Model != null)
        {
            <p>@Model</p>
        }
    </div>

</div>
